<section class="intro">
  <div class="box intro-inner">
    <div class="breadcrumb-wrapper">
      <nav class="breadcrumb">
        <a href="/" class="breadcrumb-item">Главная</a>
        <span class="breadcrumb-item">/</span>
        <% if (parent) { %>
        <a href="<%= parent.path %>" class="breadcrumb-item"
          ><%= parent.title %></a
        >
        <span class="breadcrumb-item">/</span>
        <% } %>
        <p class="breadcrumb-item active"><%= current %></p>
      </nav>
      <h1 class="intro-title"><%= current %></h1>
    </div>
  </div>
  <img src="<%= image %>" alt="intro image" class="image" />
</section>
